<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TemaSemBarra" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BrancoCor</item>
        <item name="colorPrimaryDark">@color/VinhoCor</item>
        <item name="colorAccent">@color/VinhoCor</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/BrancoCor</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/VinhoCor</item>
    </style>

</resources>
