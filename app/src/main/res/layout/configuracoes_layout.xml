<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BrancoCor"
    tools:context=".Configuracoes_Activity">

    <include layout="@layout/toolbar_back" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:text="Informações pessoais"
        android:textColor="@color/PretoCor"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/id_linearNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alterar_borda"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/id_txtNomeUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="******"
            android:textColor="@color/PretoCor"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linearPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alterar_borda"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_linearNome">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso:"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/id_txtPesoUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**"
            android:textColor="@color/PretoCor"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linearEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alterar_borda"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_linearPeso">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/id_txtEmailUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="******@****.com"
            android:textColor="@color/PretoCor"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linearSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alterar_borda"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_linearEmail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha:"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/id_txtSenhaUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="********"
            android:textColor="@color/PretoCor"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/id_btnEsporteUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/alterar_borda"
        android:padding="5dp"
        android:text="******, ******"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_linearSenha" />

</android.support.constraint.ConstraintLayout>